<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mochameter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - coffee brown -->
        <item name="colorPrimary">#8B572A</item>
        <item name="colorPrimaryVariant">#5D3A1A</item>
        <item name="colorOnPrimary">#E2DCCC</item>
        <!-- Secondary brand color - cream color -->
        <item name="colorSecondary">#E2DCCC</item>
        <item name="colorSecondaryVariant">#F4D3B7</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color - coffee brown -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Mochameter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mochameter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mochameter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
